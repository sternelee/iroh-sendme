{
  "name": "sendme-browser-app",
  "type": "module",
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "deploy": "npm run build && wrangler deploy",
    "preview": "npm run build && wrangler dev",
    "cf-typegen": "wrangler types",
    "build:wasm": "cd ../browser-lib && cargo build --target=wasm32-unknown-unknown && wasm-bindgen ./target/wasm32-unknown-unknown/debug/sendme_browser.wasm --out-dir=../browser-app/public/wasm --weak-refs --target=web --debug",
    "build:wasm:release": "cd ../browser-lib && cargo build --target=wasm32-unknown-unknown --release && wasm-bindgen ./target/wasm32-unknown-unknown/release/sendme_browser.wasm --out-dir=../browser-app/public/wasm --weak-refs --target=web"
  },
  "dependencies": {
    "@solid-primitives/autofocus": "^0.1.3",
    "@solid-primitives/event-listener": "^2.4.3",
    "@solid-primitives/fetch": "^2.5.2",
    "@solid-primitives/storage": "^4.3.3",
    "@solid-primitives/transition-group": "^1.1.2",
    "@solidjs/router": "^0.15.0",
    "@solidjs/start": "^1.1.0",
    "solid-icons": "^1.2.0",
    "solid-js": "^1.9.5",
    "solid-motionone": "^1.0.4",
    "solid-toast": "^0.5.0",
    "vinxi": "^0.5.7",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "tailwindcss": "^4.0.7",
    "wrangler": "^4.59.3"
  },
  "engines": {
    "node": ">=22"
  }
}
