<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>NSCameraUsageDescription</key>
    <string>Read QR codes</string>

    <!-- Network access permissions for P2P functionality -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>PiSend needs local network access to establish P2P connections and share terminal sessions</string>

    <key>NSBonjourServices</key>
    <array>
      <string>_pisend._tcp</string>
      <string>_pisend._udp</string>
    </array>

    <!-- Allow arbitrary loads for iroh P2P networking -->
    <key>NSAppTransportSecurity</key>
    <dict>
      <key>NSAllowsArbitraryLoads</key>
      <true/>
      <key>NSAllowsLocalNetworking</key>
      <true/>
    </dict>

    <!-- Required for background network operations -->
    <key>UIBackgroundModes</key>
    <array>
      <string>background-processing</string>
    </array>
  </dict>
</plist>
